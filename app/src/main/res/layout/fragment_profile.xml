<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingappadmin.ui.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.profile.ProfileFragment"
        android:background="@color/background_gray">
        <ImageView
            android:id="@+id/img_description"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_orange_and_white_polygon_background_template_design"
            app:imageUrl="@{viewModel.eatery.photoUrl}"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_eatery_name"
            app:layout_constraintTop_toBottomOf="@id/img_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp">
                <TextView
                    android:id="@+id/profile_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cơm Ngô Quyền"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{viewModel.eatery.name}"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_eatery_name"
            android:layout_marginTop="22dp"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProfileAndAddress"
                app:icon="@drawable/ic_profile_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:iconTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/avenir_next_lt_pro"
                app:backgroundTint="@null"
                android:background="@drawable/button_chevron" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.button.MaterialButton
                app:icon="@drawable/ic_review"
                app:iconSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My reviews"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                app:iconTint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/avenir_next_lt_pro"
                app:backgroundTint="@null"
                android:background="@drawable/button_chevron" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.button.MaterialButton
                app:icon="@drawable/ic_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                app:iconTint="@color/primaryColor"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/avenir_next_lt_pro"
                app:backgroundTint="@null"
                android:background="@color/white"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>