<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingappadmin.ui.report.orderdetail.OrderDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.report.orderdetail.OrderDetailFragment">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/orange_400"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="600"
            android:text="@{viewModel.selectedProperty.shippingAddress.name}"
            tools:text="Đỗ Phú Quang"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <TextView
            android:id="@+id/tvOrderTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:singleLine="true"
            android:text="@{viewModel.selectedProperty.orderTime.toDate().toLocaleString()}"
            android:textColor="@color/gray_700"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCustomerName"
            tools:ignore="HardcodedText,UnusedAttribute"
            tools:text="Thời gian đặt: 16h30" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:gravity="start"
            android:singleLine="true"
            android:textColor="@color/gray_500"
            android:textFontWeight="500"
            android:text="@{viewModel.selectedProperty.shippingAddress.address}"
            tools:text="Địa chỉ: KTX Khu A, ĐHQG TP.HCM"
            tools:ignore="UnusedAttribute" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsInOrderRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/cardTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            tools:itemCount="10"
            tools:listitem="@layout/item_product_in_order" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productsInOrderRecyclerView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@{@string/total(viewModel.total)}"
                android:textColor="@color/deep_orange_A200"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Total: $15.60" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>