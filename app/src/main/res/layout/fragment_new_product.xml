<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_A700"
        android:padding="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageChevronleft"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_chevronleft"
                app:layout_constraintBottom_toBottomOf="@id/new_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/new_product"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/new_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="New Product"
                android:textColor="@color/gray_700"
                android:textFontWeight="500"
                android:textSize="27sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/productScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintBottom_toTopOf="@id/btn_confirm"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintVertical_bias="0.0">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product's Name"
                    app:hintTextColor="@color/lightOrange"
                    app:boxStrokeColor="@color/lightOrange"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:padding="16dp"
                        android:text=""
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500"
                        android:textFontWeight="400"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry"
                        tools:targetApi="p" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    app:hintTextColor="@color/lightOrange"
                    app:boxStrokeColor="@color/lightOrange"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrice"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/gray_800"
                        android:textFontWeight="400"
                        tools:ignore="RtlSymmetry"
                        tools:targetApi="p"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingredients"
                    app:hintTextColor="@color/lightOrange"
                    app:boxStrokeColor="@color/lightOrange"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:textColorHint="@color/gray_500"
                        android:textSize="16sp"
                        android:textColor="@color/gray_800"
                        android:textFontWeight="400"
                        tools:ignore="RtlSymmetry"
                        tools:targetApi="p"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imgDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:scaleType="fitXY"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_select_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imgDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/rectangle_bg_deep_orange_a200_radius_6"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/white_A700"
                    android:textFontWeight="400"
                    android:textSize="16sp"
                    tools:ignore="UnusedAttribute"
                    android:text="select image" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rectangle_bg_blue_a200_radius_6"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/white_A700"
            android:textFontWeight="400"
            android:textSize="16sp"
            tools:ignore="UnusedAttribute"
            android:text="confirm" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>