<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="product"
            type="xyz.daijoubuteam.foodshoppingappadmin.model.Product" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="16dp"
        tools:ignore="ExtraText"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <ImageView android:id="@+id/imgAvatar"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:src="@drawable/img_rectangle44"
            tools:src="@drawable/img_rectangle44"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/tvProductName"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textColor="@color/bluegray_700"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="400"
            tools:text="Shrimp Pizza"
            android:text="@{product.name}"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:singleLine="true"
            android:textColor="@color/deep_orange_A200"
            android:textFontWeight="500"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText,UnusedAttribute"
            android:text="@{'$' + Double.toString(product.newPrice)}"
            tools:text="$ 12.00" />
        <TextView
            android:id="@+id/tvQuantity"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_width="0dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="500"
            android:text="@{product.ingredients.toString().substring(1,product.ingredients.toString().length())}"
            tools:text="Số lượng: 5"
            tools:ignore="UnusedAttribute" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>