<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingappadmin.ui.products.editproduct.EditProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_A700"
        android:padding="24dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageChevronleft"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_chevronleft"
                    app:layout_constraintBottom_toBottomOf="@id/edit_product"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edit_product"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/edit_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit Product"
                    android:textColor="@color/gray_700"
                    android:textFontWeight="500"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/productScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeader"
                    app:layout_constraintBottom_toTopOf="@id/layout_btn"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="14dp"
                    app:layout_constraintVertical_bias="0.0">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange_400"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:text="@={viewModel.selectedProperty.name}"
                            android:backgroundTint="@color/orange_400"
                            android:textCursorDrawable="@color/orange_400"
                            tools:text="Pizza"/>
                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Description:"
                            tools:ignore="HardcodedText"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextColor="@color/lightOrange"
                            app:boxStrokeColor="@color/lightOrange"
                            android:layout_marginTop="12dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:padding="16dp"
                                android:text="@={viewModel.selectedProperty.description}"
                                android:textColor="@color/gray_800"
                                android:textColorHint="@color/gray_500"
                                android:textFontWeight="400"
                                android:textSize="16sp"
                                tools:ignore="RtlSymmetry"
                                tools:targetApi="p" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:id="@+id/tvCurrentPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="Current Price: $"
                                tools:ignore="HardcodedText"/>
                            <EditText
                                android:id="@+id/etNewPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="@={viewModel.newPrice}"
                                android:inputType="numberDecimal"
                                app:layout_constraintStart_toEndOf="@id/tvCurrentPrice"
                                app:layout_constraintTop_toTopOf="@id/tvCurrentPrice"
                                app:layout_constraintBottom_toBottomOf="@id/tvCurrentPrice"
                                tools:text="12.00"
                                tools:ignore="HardcodedText"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp">
                            <TextView
                                android:id="@+id/tvOldPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="Old Price: $"
                                tools:ignore="HardcodedText"/>
                            <EditText
                                android:id="@+id/etOldPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="@={viewModel.oldPrice}"
                                android:inputType="numberDecimal"
                                app:layout_constraintStart_toEndOf="@id/tvOldPrice"
                                app:layout_constraintTop_toTopOf="@id/tvOldPrice"
                                app:layout_constraintBottom_toBottomOf="@id/tvOldPrice"
                                tools:text="15.00"
                                tools:ignore="HardcodedText"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                            <TextView
                                android:id="@+id/tvIngredients"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Ingredients: "
                                tools:ignore="HardcodedText"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">
                            <EditText
                                android:id="@+id/etIngredient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:hint="Enter Ingredient"
                                android:text="@={viewModel.ingredient}"
                                tools:ignore="HardcodedText"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_add_ingredient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/etIngredient"
                                app:layout_constraintBottom_toBottomOf="@id/etIngredient"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:background="@drawable/rectangle_bg_white_a700_border_gray_300_radius_8"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:onClick="@{() -> viewModel.onAddIngredient()}"
                                android:textColor="@color/orange_400"
                                android:textFontWeight="400"
                                android:textSize="16sp"
                                tools:ignore="UnusedAttribute"
                                android:text="@string/add" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_ingredient"
                            tools:itemCount="6"
                            android:layout_marginTop="12dp"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imgDescription"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:imageUrl="@{viewModel.selectedProperty.img}"
                                app:layout_constraintDimensionRatio="1:1"
                                android:layout_marginVertical="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_select_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/imgDescription"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/rectangle_bg_deep_orange_a200_radius_6"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textAllCaps="true"
                            android:textColor="@color/white_A700"
                            android:textFontWeight="400"
                            android:textSize="16sp"
                            tools:ignore="UnusedAttribute"
                            android:text="select image" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_save"
                android:layout_marginRight="8dp"
                android:background="@drawable/rectangle_bg_white_a700_border_gray_300_radius_8"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/orange_400"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:onClick="@{() -> viewModel.onDeleteProduct()}"
                tools:ignore="UnusedAttribute"
                android:text="delete" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_delete"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rectangle_bg_blue_a200_radius_6"
                android:ellipsize="end"
                android:onClick="@{() -> viewModel.updateProductInfo()}"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/white_A700"
                android:textFontWeight="400"
                android:textSize="16sp"
                tools:ignore="UnusedAttribute"
                android:text="save" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>