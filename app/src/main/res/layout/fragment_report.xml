<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingappadmin.ui.report.ReportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.report.ReportFragment">
        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="24dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textStyle="bold"
            android:textColor="@color/bluegray_500" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etMonth"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            app:boxStrokeColor="@color/orange_400"
            app:layout_constraintTop_toBottomOf="@id/tvReport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/etYear"
            android:hint="@string/month">

            <AutoCompleteTextView
                android:id="@+id/monthAuto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:text="@={viewModel.month}"
                android:textColor="@color/black"
                android:inputType="none"
                android:hint="@string/month"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etYear"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            app:boxStrokeColor="@color/orange_400"
            app:layout_constraintTop_toTopOf="@id/etMonth"
            app:layout_constraintBottom_toBottomOf="@id/etMonth"
            app:layout_constraintStart_toEndOf="@id/etMonth"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/year">

            <AutoCompleteTextView
                android:id="@+id/yearAuto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:text="@={viewModel.year}"
                android:textColor="@color/black"
                android:inputType="none"
                android:hint="@string/year"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ordersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etMonth"
            app:layout_constraintBottom_toTopOf="@id/cvSummary"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/item_order" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cvSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">
                <TextView
                    android:id="@+id/tvTextTotalOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textFontWeight="600"
                    android:text="@string/total_orders"
                    tools:ignore="UnusedAttribute" />
                <TextView
                    android:id="@+id/tvTotalOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTextTotalOrders"
                    app:layout_constraintStart_toEndOf="@id/tvTextTotalOrders"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/deep_orange_A200"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@{viewModel.totalOrderLabel}" />
                <TextView
                    android:id="@+id/tvTextTotalRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvTextTotalOrders"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textFontWeight="600"
                    android:text="@string/total_revenue"
                    tools:ignore="UnusedAttribute" />
                <TextView
                    android:id="@+id/tvTotalRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tvTextTotalRevenue"
                    app:layout_constraintStart_toEndOf="@id/tvTextTotalRevenue"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/deep_orange_A200"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@{'$' + viewModel.totalRevenue.toString()}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>