<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingappadmin.ui.orders.editorder.EditOrderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:singleLine="true"
            android:textFontWeight="600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textColor="@color/orange_400"
            android:text="@{viewModel.selectedProperty.shippingAddress.name}"
            tools:text="Đỗ Phú Quang"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <TextView
            android:id="@+id/tvOrderTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:singleLine="true"
            android:text="@{viewModel.selectedProperty.orderTime.toDate().toLocaleString()}"
            android:textColor="@color/gray_700"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCustomerName"
            tools:ignore="HardcodedText,UnusedAttribute"
            tools:text="Thời gian đặt: 16h30" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:gravity="start"
            android:singleLine="true"
            android:textColor="@color/gray_500"
            android:textFontWeight="500"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrderTime"
            android:text="@{viewModel.selectedProperty.shippingAddress.address}"
            tools:text="Địa chỉ: KTX Khu A, ĐHQG TP.HCM"
            tools:ignore="UnusedAttribute" />
        <View
            android:id="@+id/tvDivider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            android:layout_marginTop="16dp"
            android:background="@color/bluegray_50"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsInOrderRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/tvDivider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDivider1"
            tools:itemCount="10"
            tools:listitem="@layout/item_product_in_order" />
        <View
            android:id="@+id/tvDivider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintBottom_toTopOf="@id/cardTotal"
            android:layout_marginBottom="16dp"
            android:background="@color/bluegray_50"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productsInOrderRecyclerView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@{'$' + viewModel.selectedProperty.totalPrice.toString()}"
                android:textColor="@color/deep_orange_A200"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/statusMenu"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:hint="@string/status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardTotal">

            <AutoCompleteTextView
                android:id="@+id/status_drop_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/status"
                android:inputType="none"
                android:text="@={viewModel.selectedProperty.status}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/blue_A200"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="50dp"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusMenu"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>