<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="product"
            type="xyz.daijoubuteam.foodshoppingappadmin.model.Product" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="16dp"
        tools:ignore="ExtraText"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <ImageView android:id="@+id/imgAvatar"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/img_rectangle44"
            tools:src="@drawable/img_rectangle44"
            tools:ignore="ContentDescription" />
        <TextView
            android:ellipsize="end"
            android:id="@+id/tvEateryName"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textColor="@color/bluegray_700"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="400"
            tools:text="Shrimp Pizza"
            android:text="@{product.name}"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <TextView
            android:id="@+id/tvIngredient"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_width="0dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvEateryName"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="500"
            android:text="@{product.ingredients.toString().substring(1,product.ingredients.toString().length())}"
            tools:text="Shrimp, mushroom, cheese, tomato"
            tools:ignore="UnusedAttribute" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintPrice"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvIngredient"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tvNewPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:singleLine="true"
                android:textColor="@color/deep_orange_A200"
                android:textFontWeight="500"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,UnusedAttribute"
                android:text="@{'$' + Double.toString(product.newPrice)}"
                tools:text="$ 12.00" />
            <TextView
                android:id="@+id/tvOldPrice"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="20dp"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvNewPrice"
                android:textColor="@color/gray_500"
                android:textSize="12sp"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textFontWeight="500"
                android:text="@{'$' + Double.toString(product.oldPrice)}"
                tools:text="$ 20.00"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <View
                android:background="@drawable/rectangle_border_gray_500"
                android:id="@+id/viewLine"
                android:layout_height="2dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="@+id/tvOldPrice"
                app:layout_constraintBottom_toBottomOf="@+id/tvOldPrice"
                app:layout_constraintStart_toStartOf="@+id/tvOldPrice"
                app:layout_constraintEnd_toEndOf="@id/tvOldPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>